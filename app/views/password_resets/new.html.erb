<% provide(:title, 'reset password') %>

<h1>Enter email to reset password</h1>

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
<%= form_for(:reset , url: password_resets_path) do |f| %> 
            
    <%= f.label :email %>
<!-- should be hiddenfield.email something so in params and not in params[:reset] -->
<%= f.email_field :email, class: 'form-control' %>

<%= f.submit 'send password reset email' , class: "btn btn-primary" %>
        <% end %>
    </div>
</div>