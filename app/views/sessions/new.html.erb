<% provide(:title, 'Log in') %>
<h1 class = "center">Log in :)</h1> <!-- jumbo class? -->
<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %> <!-- why do i need the url here for it to work?-->
             <%#= render 'shared/error_messages' %> 
            
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
            
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            
            <!-- go more into detail with this what does it all mean exactly? -->
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>COOKIES? <%= image_tag("cookie monster jpg.png", alt: "COOKIE MONSTER", size: "30x30") %></span>
            <% end %>
            
            <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
        
        <p>New user? <%= link_to "Sign up now?", signup_path %> </p>
    </div>
</div>