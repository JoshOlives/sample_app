<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %> <!-- partial for older browsers -->
  </head>
  
  <body>
    <%= render 'layouts/header' %> <!-- partial for header -->
    <div class="container">
      <% flash.each do |mess_type, mess| %>
        <%= content_tag(:div, mess, class: "alert alert-#{mess_type}")%>
      <% end %>
      <%= yield %> <!--- the real shit it will render -->
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
